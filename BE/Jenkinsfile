pipeline {
    agent any

    environment {
        MATTERMOST_WEBHOOK = "https://meeting.ssafy.com/hooks/kd8p46dntiys5xc9tukqedt9jr"
        IMAGE_NAME = "daum4572/s12p21e106"
        TAG = "latest"
        CONTAINER_NAME = "s12p21e106-backend"
        CONFIG_PATH = "BE/src/main/resources/application.yml"
        DOCKER_CONFIG_PATH = "/home/ubuntu/Project/S12P21E106/BE/config/application.yml"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/develop']],
                    userRemoteConfigs: [[
                        url: 'https://lab.ssafy.com/s12-fintech-finance-sub1/S12P21E106.git',
                        credentialsId: 'gitlab-credentials'
                    ]]
                ])
                updateGitlabCommitStatus name: 'build', state: 'pending'
            }
        }

        stage('Copy Secret File') {
            steps {
                script {
                    withCredentials([file(credentialsId: 'application-yml', variable: 'APP_YML')]) {
                        sh 'mkdir -p BE/src/main/resources'
                        sh 'cp $APP_YML ${CONFIG_PATH}'
                        sh 'ls -al BE/src/main/resources'

                        // Dockerμ— λ§μ΄νΈν•  μ‹¤μ  config κ²½λ΅μ—λ„ λ³µμ‚¬
                        sh 'mkdir -p /home/ubuntu/Project/S12P21E106/BE/config'
                        sh 'cp $APP_YML ${DOCKER_CONFIG_PATH}'
                        sh 'ls -al /home/ubuntu/Project/S12P21E106/BE/config'
                        sh 'cat ${DOCKER_CONFIG_PATH}'
                    }
                }
            }
        }

        stage('Build') {
            steps {
                dir('BE') {
                    echo "[DEBUG] Build λ‹¨κ³„ μ§„μ…"
                    sh "chmod +x ./gradlew"
                    sh "./gradlew clean build -x test"
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    dir('BE') {
                        sh "docker build -t ${IMAGE_NAME}:${TAG} ."
                    }
                    withCredentials([usernamePassword(
                        credentialsId: 'docker-hub-credentials',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )]) {
                        sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                    }
                    sh "docker push ${IMAGE_NAME}:${TAG}"
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    def imageWithTag = "${IMAGE_NAME}:${TAG}"
                    sh """
                        docker container rm -f ${CONTAINER_NAME} || true
                        docker image rm -f ${imageWithTag} || true
                        docker rmi -f \$(docker images -f "dangling=true" -q) || true
                        docker pull ${imageWithTag}
                        docker network inspect s12p21e106-network >/dev/null 2>&1 || docker network create s12p21e106-network
                        docker run -d \
                          --name ${CONTAINER_NAME} \
                          -p 8082:8080 \
                          --network s12p21e106-network \
                          -v /home/ubuntu/Project/S12P21E106/BE/config:/config \
                          -e SPRING_CONFIG_LOCATION=classpath:/,file:/config/application.yml \
                          ${imageWithTag}
                    """
                }
            }
        }
    }

    post {
        success {
            script {
                sh """
                    curl -X POST -H 'Content-Type: application/json' --data '{
                        "text": "β… [Spring Boot] Jenkins Build & Deployment Success! π‰\\nπ”Ή ν”„λ΅μ νΈ: S12P21E106\\nπ”Ή μ„λΉ„μ¤: Backend (Spring Boot + Docker)\\nπ”Ή μƒνƒ: μ„±κ³µ β…"
                    }' ${MATTERMOST_WEBHOOK}
                """
                updateGitlabCommitStatus name: 'build', state: 'success'
            }
        }
        failure {
            script {
                sh """
                    curl -X POST -H 'Content-Type: application/json' --data '{
                        "text": "β [Spring Boot] Jenkins Build Failed! π”¥\\nπ”Ή ν”„λ΅μ νΈ: S12P21E106\\nπ”Ή μ„λΉ„μ¤: Backend (Spring Boot + Docker)\\nπ”Ή μƒνƒ: μ‹¤ν¨ β"
                    }' ${MATTERMOST_WEBHOOK}
                """
                updateGitlabCommitStatus name: 'build', state: 'failed'
            }
        }
    }
}
